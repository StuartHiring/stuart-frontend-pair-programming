{
  "name": "parcel-react-setup",
  "version": "1.0.0",
  "description": "ApolloGraphQL pair-programming exercise",
  "main": "index.js",
  "author": "Chris Martin <c.martin@stuart.com>",
  "license": "MIT",
  "scripts": {
    "dev": "parcel src/client/index.html --no-cache --no-source-maps --port 3000",
    "lint": "eslint '**/*.{js,jsx}' --max-warnings 20",
    "format": "prettier --write 'src/**/*.js'"
  },
  "lint-staged": {
    "*.js": [
      "yarn format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "autoprefixer": "^9.8.6",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "node-sass": "^4.14.1",
    "parcel-bundler": "^1.12.4",
    "postcss-modules": "^3.2.0",
    "prettier": "^2.0.2",
    "redux-devtools-extension": "^2.13.8"
  },
  "dependencies": {
    "@apollo/client": "^3.1.1",
    "graphql": "^15.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "redux": "^4.0.5"
  }
}
